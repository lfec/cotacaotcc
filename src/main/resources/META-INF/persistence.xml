<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="cotacao"
		transaction-type="RESOURCE_LOCAL">
		<!-- -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.lfec.domain.AreaGeografica</class>
		<class>com.lfec.domain.Negociacao</class>
		<class>com.lfec.domain.Praca</class>
		<class>com.lfec.domain.Regiao</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="false" />
			<!-- The JDBC driver of your database -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.jdbc.Driver" />
			<!-- The JDBC URL to the database instance -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/lfecTest?serverTimezone=EST5EDT" />
			<!-- The database username -->
			<property name="javax.persistence.jdbc.user" value="root" />
			<!-- The database password -->
			<property name="javax.persistence.jdbc.password"
				value="supervisor" />
			<property name="hibernate.hbm2ddl.auto"
				value="update" />
		</properties>
	</persistence-unit>
</persistence>